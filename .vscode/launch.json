    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug HA with Elasticsearch Component",
            "type": "debugpy",
            "request": "launch",
            "module": "homeassistant",
            "justMyCode": true,
            "args": [
                "--debug",
                "-c",
                "config"
            ]
        },
        {
            "name": "Debug HA with Elasticsearch Component and OTel",
            "type": "debugpy",
            "request": "launch",
            "program": ".venv/bin/opentelemetry-instrument",
            "preLaunchTask": "Setup EDOT Auto-instrumentation",
            "justMyCode": true,
            "args": [
                "python",
                "-m",
                "homeassistant",
                "--debug",
                "-c",
                "config"
            ],
            "envFile": "${workspaceFolder}/.otelenv"
        },
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "tests",
                "--continue-on-collection-errors"
            ]
        },
        {
            "name": "Python: Run Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "tests",
                "--continue-on-collection-errors"
            ]
        },
    ]
}
