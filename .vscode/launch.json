    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Update snapshots",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "args": [
                "tests",
                "--snapshot-update"
            ]
        },
        {
            "name": "Python: Run Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "args": [
                "tests",
                "--continue-on-collection-errors"
            ]
        },
        {
            "name": "Debug HA with Elasticsearch Component",
            "type": "debugpy",
            "request": "launch",
            "module": "homeassistant",
            "justMyCode": false,
            "args": [
                "--debug",
                "-c",
                "config"
            ]
        },
    ]
}